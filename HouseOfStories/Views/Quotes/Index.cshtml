@model IEnumerable<HouseOfStories.Models.Quote>


<p>
    <a asp-action="Create" class="btn btn-dark">Добавить цитату</a>
</p>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Оценка
            </th>
            <th>
               Текст цитаты
            </th>
            <th>
               Показывать
            </th>
            <th>
                Автор
            </th>
            <th>
               Категория
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="10%"> @item.Rating </td>
                <td width="40%"> @item.Text </td>
                 <td width="10%"> @(item.IsValid?"Да":"Нет") </td>
                <td width="20%"> @item.Author.Name </td>
                <td width="20%"> @item.Category.Title </td>
                <td class="text-center">
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-light mx-2">
                            Реадактировать
                        </a>
                        <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-dark mx-2">
                            Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
